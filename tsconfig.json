{
  "include": ["src"],
  "compilerOptions": {
    "target": "ES2017",           
    "module": "CommonJS",    
    "lib": ["es6"], 
    "allowJs": true,   
    "outDir": "build",  
    "rootDir": "src",   
    "strict": true,   
    "noImplicitAny": true,  
    "preserveConstEnums": true,
    "esModuleInterop": true,        
    "resolveJsonModule": true,      
    "forceConsistentCasingInFileNames": true,     
    "skipLibCheck": true,
    "sourceMap": true                                
  }
}
